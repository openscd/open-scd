{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
}
