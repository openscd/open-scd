{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "out-tsc",
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "rootDir": "./"
  },
  "include": ["**/*.ts"]
}
