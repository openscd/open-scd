{
  "$id": "//openscd.github.io/public/json/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "OpenSCD Plugin Registry Schema",
  "type": "object",
  "additionalProperties" : {
    "type" : "object",
    "properties" : {
      "default" : {
        "type" : "boolean",
        "required" : false
      },
      "src" : {
        "type" : "string",
        "required" : true
      },
      "icon" : {
        "type": "string",
        "required": false
      },
      "kind": {
        "type": "string",
        "enum": ["editor", "import", "export", "transform"],
        "required": true
      }
    },
    "additionalProperties": false
  }
}
