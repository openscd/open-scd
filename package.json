{
  "name": "openscd-monorepo",
  "version": "0.0.1",
  "description": "OpenSCD base distribution and plugins",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "doc": "lerna run doc --ignore=open-scd",
    "test": "lerna run test --ignore=@openscd/core",
    "build:all": "npx nx run-many -t build --all",
    "start": "lerna run start --ignore=@openscd/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openscd/open-scd.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "lerna": "^7.1.4",
    "nx": "^16.10.0"
  }
}
