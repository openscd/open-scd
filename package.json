{
  "name": "open-scd",
  "version": "0.0.0",
  "description": "A bottom-up substation configuration designer for projects described using SCL `IEC 61850-6` Edition 2 or greater.",
  "keywords": [
    "SCL",
    "substation configuration",
    "IEC",
    "61850-6",
    "SCD",
    "editor"
  ],
  "author": "OMICRON electronics GmbH",
  "license": "UNLICENSED",
  "main": "open-scd.js",
  "module": "open-scd.js",
  "type": "module",
  "dependencies": {
    "@material/mwc-drawer": "^0.17.2",
    "@material/mwc-icon-button": "^0.17.2",
    "@material/mwc-linear-progress": "^0.17.2",
    "@material/mwc-top-app-bar-fixed": "^0.17.2",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1"
  },
  "scripts": {
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "tsc && karma start karma.conf.cjs --coverage",
    "doc:clean": "npx rimraf doc",
    "doc:typedoc": "typedoc --out doc --plugin typedoc-plugin-markdown src",
    "doc:wca": "wca src --outDir doc/components",
    "doc": "npm run doc:clean && npm run doc:typedoc && npm run doc:wca",
    "test:watch": "concurrently --kill-others --names tsc,karma \"npm run tsc:watch\" \"karma start karma.conf.cjs --auto-watch=true --single-run=false\"",
    "start": "concurrently --kill-others --names tsc,es-dev-server \"npm run tsc:watch\" \"es-dev-server --app-index index.html --node-resolve --open --watch\"",
    "tsc:watch": "tsc --watch"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^2.0.6",
    "@open-wc/testing": "^2.5.19",
    "@open-wc/testing-karma": "^4.0.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "concurrently": "^5.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-tsdoc": "^0.2.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "puppeteer": "^5.2.1",
    "puppeteer-screenshot-tester": "^1.3.1",
    "tslib": "^2.0.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^3.9.7",
    "web-component-analyzer": "^1.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run doc"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
